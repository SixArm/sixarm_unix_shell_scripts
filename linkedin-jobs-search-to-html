        self.assertEqual(env.url_jobs_search_by_keywords('alpha bravo'), 'http://0.0.0.0:8000/jobs/search/keywords/start/0/index.html')

    def test_url_jobs_search_by_keywords_with_start(self):
        self.assertEqual(env.url_jobs_search_by_keywords('alpha bravo', 25), 'http://0.0.0.0:8000/jobs/search/keywords/start/25/index.html')

    def test_url_jobs_search_by_id(self):
        self.assertEqual(env.url_jobs_search_by_id(123), 'http://0.0.0.0:8000/jobs/search/id/index.html')

